{
    "app-id" : "dev.edfloreshz.ToDo",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "42",
    "sdk" : "org.gnome.Sdk",
    "sdk-extensions" : [
        "org.freedesktop.Sdk.Extension.rust-stable"
    ],
    "command" : "todo",
    "finish-args" : [
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--device=dri"
    ],
    "build-options" : {
        "append-path" : "/usr/lib/sdk/rust-stable/bin",
        "env" : { "CARGO_HOME" : "/run/build/todo/cargo" }
    },
    "modules" : [
        {
            "name" : "todo",
            "builddir" : true,
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "git",
                    "commit": "756317f3555bc01cf63abb6971b39fcd018efbae",
                    "url": "https://github.com/edfloreshz/do.git"
                },
                "build-aux/cargo-sources.json"
            ]
        }
    ]
}
