{
    "app-id" : "dev.edfloreshz.Doable",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "42",
    "sdk" : "org.gnome.Sdk",
    "sdk-extensions" : [
        "org.freedesktop.Sdk.Extension.rust-stable"
    ],
    "command" : "doable",
    "finish-args" : [
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--device=dri"
    ],
    "build-options" : {
        "append-path" : "/usr/lib/sdk/rust-stable/bin",
        "env" : { "CARGO_HOME" : "/run/build/doable/cargo" }
    },
    "modules" : [
        {
            "name" : "doable",
            "builddir" : true,
            "buildsystem" : "meson",
            "sources" : [
            	{
                    "type" : "git",
                    "branch": "main",
                    "url" : "https://github.com/edfloreshz/do.git"
                },
            ]
        }
    ]
}
